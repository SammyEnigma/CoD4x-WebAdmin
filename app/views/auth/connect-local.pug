extends ../layout/home

block content
		ol.breadcrumb
			li
				a(href='/') Home
			li.active Local Account
		section#content
			.container
				.row
					.col-md-4.col-md-offset-3
						.card
							.card-header.bgm-blue
								h2
									| Create Local Account
									small Create Local Account Here
								button.btn.bgm-green.btn-float.waves-effect
									i.zmdi.zmdi-account
							.card-body.card-padding
								if (message.length > 0)
									.alert.alert-danger=message
								form(method='post', action='/user/connect/local')
									.form-group.fg-line
										label(for='user_name')
											i.zmdi.zmdi-account
											|  Username
										input#user_name.form-control.input-sm(type='text', placeholder='Enter Username here', name='user_name')
									.form-group.fg-line
										label(for='email')
											i.zmdi.zmdi-account
											|  Email
										input#email.form-control.input-sm(type='email', placeholder='Enter Email here', name='email')
									.form-group.fg-line
										label(for='password')
											i.zmdi.zmdi-lock
											|  Password
										input#password.form-control.input-sm(type='password', placeholder='Enter Password here', name='password')
									.col-sm-12.m-b-20
										input(type='hidden', name='_csrf', value=csrfToken)
										button.btn.btn-primary.waves-effect(type='submit') Sign Up
									.clearfix
